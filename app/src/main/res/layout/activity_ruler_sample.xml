<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RulerSampleActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rulerSampleRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_ruler_sample" />

    <com.example.customviews.view.RulerView
        android:id="@+id/rulerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rulerSampleRv" />

    <com.example.customviews.view.RulerView
        android:id="@+id/rulerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rulerView"
        app:rv_calibrationUnit="4"
        app:rv_maxValue="100"
        app:rv_minValue="-100" />

    <com.example.customviews.view.RulerMaskView
        android:id="@+id/rulerMaskView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/rulerSampleRv"
        app:layout_constraintEnd_toEndOf="@id/rulerSampleRv"
        app:layout_constraintStart_toStartOf="@id/rulerSampleRv"
        app:layout_constraintTop_toTopOf="@id/rulerSampleRv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/applyFilterBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Apply Filters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rulerView1" />

    <com.sqsong.opengllib.OpenGLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/applyFilterBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>