<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1A5555FF"
    android:fitsSystemWindows="true"
    tools:context=".ui.WatermarkMaterialActivity">


    <com.example.customviews.view.WatermarkMaterialView
        android:id="@+id/watermarkMaterialView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wmv_checked="true"
        app:wmv_image="@drawable/img_sample_png"
        app:wmv_mode="mode_image"
        app:wmv_radius="8dp" />

    <com.example.customviews.view.InfiniteScrollTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/watermarkMaterialView" />


</androidx.constraintlayout.widget.ConstraintLayout>